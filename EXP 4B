#include <stdio.h>

int main()
{
    int n, i, j, temp;
    int burst[10], wait[10], turn[10], p[10];
    float w = 0, t = 0;

    printf("Enter the number of processes: ");
    scanf("%d", &n);

    printf("Enter the burst time for each process:\n");

    for(i = 0; i < n; i++)
    {
        printf("P%d: ", i+1);
        scanf("%d", &burst[i]);
        p[i] = i+1;   // Store process numbers
    }

    // Sort burst time (SJF)
    for(i = 0; i < n-1; i++)
    {
        for(j = i+1; j < n; j++)
        {
            if(burst[i] > burst[j])
            {
                temp = burst[i];
                burst[i] = burst[j];
                burst[j] = temp;

                temp = p[i];
                p[i] = p[j];
                p[j] = temp;
            }
        }
    }

    // Waiting time
    wait[0] = 0;
    for(i = 1; i < n; i++)
        wait[i] = wait[i-1] + burst[i-1];

    // Turnaround time
    for(i = 0; i < n; i++)
        turn[i] = wait[i] + burst[i];

    // Gantt Chart
    printf("\nGantt chart\n");

    for(i = 0; i < n; i++)
        printf("P%d| ", p[i]);

    printf("\n");

    for(i = 0; i < n; i++)
        printf("%d ", turn[i]);

    // Averages
    for(i = 0; i < n; i++)
    {
        w += wait[i];
        t += turn[i];
    }

    w /= n;
    t /= n;

    printf("\nAverage waiting time is %.2f", w);
    printf("\nAverage turnaround time is %.2f", t);

    return 0;
}
